# Navigation shortcuts
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~"
alias -- -="cd -"

# Editor shortcuts
alias sd="subl ."

# Directory listing (different options needed for GNU vs OSX)
if [ "$TERM" != "dumb" ]
then
	if [ $(uname) == "Linux"  ]
	then
		alias ls="ls -lAhF --color=auto"
   		alias lc="clear; ls"
 	else
   		alias ls="ls -GlAhF"
   		alias lc="clear; ls"
 	fi
fi

# Enable aliases to be sudoâ€™ed
alias sudo="sudo "

# Program shortcuts
alias g="git"
