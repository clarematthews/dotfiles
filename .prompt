function parse_git_dirty() {
	[[ $(git status 2> /dev/null | tail -n1) != *"working directory clean"* ]] && echo "*"
}

function parse_git_branch() {
	git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e "s/* \(.*\)/\1$(parse_git_dirty)/"
}

if [[ $OSTYPE == "darwin12" ]]; then
    export PS1="\[$(tput setaf 6)\]\u\[$(tput setaf 7)\]@\[$(tput setaf 6)\]\h\[$(tput setaf 7)\]:\[$(tput setaf 6)\]\w\[$(tput setaf 3)\]\$([[ -n \$(git branch 2> /dev/null) ]] && echo \">\")\$(parse_git_branch)\[$(tput setaf 7)\]\n\\$ \[$(tput sgr0)\]"
else
    export PS1="\[$(tput setaf 1)\]\u\[$(tput setaf 7)\]@\[$(tput setaf 1)\]\h\[$(tput setaf 7)\]:\[$(tput setaf 1)\]\w\[$(tput setaf 3)\]\$([[ -n \$(git branch 2> /dev/null) ]] && echo \">\")\$(parse_git_branch)\[$(tput setaf 7)\]\n\\$ \[$(tput sgr0)\]"
fi